<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to 'show', books_path(book.id) %></td>
        <td><%= link_to 'edit', edit_book_path(book.id) %></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>New Book</h2>
  <%= form_with model:@book do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

  <% end %>